datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id        Int      @id @default(autoincrement())
    name      String
    email     String   @unique
    password  String
    tokens    Token[]
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Token {
    id        Int      @id @default(autoincrement())
    hash      String
    user      User     @relation(fields: [userId], references: [id])
    userId    Int
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
